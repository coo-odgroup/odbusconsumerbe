        "/api/Register": {
            "post": {
                "tags": [
                    "Register API"
                ],
                "summary": "send OTP to user for registration",
                "description": "user detatils saved and otp generated",
                "operationId": "App\\Http\\Controllers\\UsersController::Register",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "name of user",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "email of user",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "mobile number of user",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "password given by user",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "created_by",
                        "in": "query",
                        "description": "created by",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "user details saved and generaed otp sent to user"
                    }
                }
            }
        },
        "/api/VerifyOtp": {
            "post": {
                "tags": [
                    "VerifyOtp API"
                ],
                "summary": "user Registration with OTP verification",
                "description": "confirmation of user Registration with OTP verification",
                "operationId": "App\\Http\\Controllers\\UsersController::verifyOtp",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "query",
                        "description": "user Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "otp",
                        "in": "query",
                        "description": "otp sent by user",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Registered successfully"
                    },
                    "206": {
                        "description": "otp not provided"
                    },
                    "406": {
                        "description": "Invalid otp"
                    }
                }
            }
        },
        "/api/Login": {
            "post": {
                "tags": [
                    "JWT Auth"
                ],
                "summary": "user Login input either phone no or email and password, creating access_token for each user",
                "description": "Login with email/phone and password to get the authentication token",
                "operationId": "App\\Http\\Controllers\\UsersController::login",
                "parameters": [
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "phone no of user",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "email of user",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "password given by user",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login Successful"
                    },
                    "206": {
                        "description": "Validation error"
                    },
                    "422": {
                        "description": "Wrong credentials response"
                    }
                }
            }
        },
