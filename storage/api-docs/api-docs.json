        "/api/getLocation": {
            "get": {
                "tags": [
                    "getLocation API"
                ],
                "summary": "Get List of Locations",
                "description": "Locations with SearchValue params",
                "operationId": "App\\Http\\Controllers\\ListingController::getLocation",
